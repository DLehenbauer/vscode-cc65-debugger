{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "ELECTRON_RUN_AS_NODE": "1"
        }
    },
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "\"${workspaceFolder}/make.bat\""
            },
            "linux": {
                "command": "sh \"${workspaceFolder}/make.sh\""
            }
        }
    ]
}