            "build": {
                "cwd": "${workspaceFolder}",
                "command": "make",
                "args": [
                    "OPTIONS=mapfile,labelfile,debugfile"
                ]
            },
            "stopOnEntry": true,
            "stopOnExit": true,
            "viceArgs": [
            ]
        },
        {
            "type": "cc65-vice",
            "request": "launch",
            "name": "CC65 Vice Launch (Debug Extension)",
            "program": "${workspaceFolder}/asm-project.c64",
            "debugFile": "${workspaceFolder}/asm-project.c64.dbg",
            "mapFile": "${workspaceFolder}/asm-project.c64.map",
            "build": {
                "cwd": "${workspaceFolder}",
                "command": "make",
                "args": [
                    "OPTIONS=mapfile,labelfile,debugfile"
                ]
            },
            "stopOnEntry": true,
            "stopOnExit": true,
            "viceArgs": [
            ],
            "debugServer": 4711
        }
    ]
