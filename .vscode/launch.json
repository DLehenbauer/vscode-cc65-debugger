{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "env": {
                "ELECTRON_IS_DEV": "1"
            },
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [ "${workspaceFolder}/out/**/*.js" ],
            "preLaunchTask": "npm: extension:debug",
        },
        {
            "name": "Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "program": "${workspaceFolder}/src/debug-adapter.ts",
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "preLaunchTask": "server",
            "args": [
                "--server=4711"
            ]
        },
        {
            "name": "Test Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "program": "${workspaceFolder}/src/debug-adapter.ts",
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "preLaunchTask": "npm: vscode:debug",
            "env": {
                "NODE_ENV": "test"
            },
            "args": [
                "--server=4711"
            ]
        },
        {
            "name": "Mocha",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u", "tdd",
                "--timeout", "30000",
                "--colors",
                "./out/tests/"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: vscode:debug",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Mocha Basic",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u", "tdd",
                "--timeout", "30000",
                "--colors",
                "--grep",
                "^Runtime Launch Basic",
                "./out/tests/"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: vscode:debug",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Mocha Attach",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u", "tdd",
                "--timeout", "999999",
                "--colors",
                "./out/tests/"
            ],
            "env": {
                "PORT": "4711"
            },
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: vscode:debug",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "compounds": [
        {
            "name": "Extension + Server",
            "configurations": [ "Extension", "Server" ]
        },
        {
            "name": "Mocha + Test Server",
            "configurations": [ "Mocha Attach", "Test Server" ]
        }
    ]
}
