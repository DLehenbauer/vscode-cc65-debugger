{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "npm: vscode:debug",
        },
        {
            "name": "Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "program": "${workspaceFolder}/dist/debugAdapter.js",
            "preLaunchTask": "npm: vscode:debug",
            "args": [
                "--server=4711"
            ]
        },
        {
            "name": "Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u", "tdd",
                "--timeout", "999999",
                "--colors",
                "./out/tests/"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Mock Sample",
            "type": "cc65-vice",
            "request": "launch",
            "program": "$HOME/c64-thepunchlineismachismo/build/machismo.d81",
            "stopOnEntry": true
        }
    ],
    "compounds": [
        {
            "name": "Extension + Server",
            "configurations": [ "Extension", "Server" ]
        }
    ]
}
