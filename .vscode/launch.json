{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "env": {
                "ELECTRON_IS_DEV": "1"
            },
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "preLaunchTask": "extension",
            "postDebugTask": "kill-webviews"
        },
        {
            "name": "Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "program": "${workspaceFolder}/src/debug-adapter.ts",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "server",
            "args": [
                "--server=4711"
            ]
        },
        {
            "name": "Test Host",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/tests/integration/index"
            ],
            "preLaunchTask": "extension",
            "postDebugTask": "kill-webviews",
            "outFiles": [
                "${workspaceFolder}/out/test/integration/**/*.js"
            ]
        },
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "jest",
                "--",
                "--runInBand",
                "--watchAll=false"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Extension + Server",
            "configurations": [ "Extension", "Server" ]
        }
    ]
}
