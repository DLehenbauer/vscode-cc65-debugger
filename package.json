{
	"name": "cc65-vice",
	"displayName": "C64 CC65/VICE Debugger",
	"version": "0.36.2",
	"publisher": "empathicqubit",
	"description": "An extension to unify VSCode, CC65, and VICE monitor.",
	"author": {
		"name": "empathicqubit",
		"email": "empathicqubit@entan.gl"
	},
	"license": "MIT",
	"keywords": [
		"cc65",
		"vice",
		"c64",
		"commodore",
		"debug"
	],
	"engines": {
		"vscode": "^1.41.0"
	},
	"icon": "images/mock-debug-icon.png",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/empathicqubit/vscode-cc65-vice-debug"
	},
	"bugs": {
		"url": "https://github.com/empathicqubit/vscode-cc65-vice-debug/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"event-stream": "^4.0.1",
		"get-port": "^5.1.1",
		"lodash": "^4.17.15",
		"node-watch": "^0.6.3",
		"queue": "^6.0.1",
		"recursive-readdir": "^2.2.2",
		"vscode-debugadapter": "1.38.0"
	},
	"devDependencies": {
		"@types/mocha": "5.2.7",
		"@types/node": "10.12.12",
		"mocha": "6.2.0",
		"tslint": "5.18.0",
		"typescript": "3.5.3",
		"vsce": "1.66.0",
		"vscode": "^1.1.36",
		"vscode-debugadapter-testsupport": "1.40.1"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.cc65-vice.getProgramName"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "c"
			}
		],
		"debuggers": [
			{
				"type": "cc65-vice",
				"label": "CC65 VICE debugger",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [],
						"properties": {
							"buildCommand": {
								"type": "string",
								"description": "The command to use to build before execution. Default is 'make'",
								"default": "make"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"buildCwd": {
								"type": "string",
								"description": "The folder to run the build command in. Default is '${workspaceDir}'",
								"default": "${workspaceDir}"
							},
							"program": {
								"type": "string",
								"description": "The path to your d81, d64, or prg. Use this if autodetection fails."
							},
							"viceCommand": {
								"type": "string",
								"description": "The path to VICE executable, either x64 or x64sc. You'll probably need this on Windows."
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "cc65-vice",
						"request": "launch",
						"name": "CC65 Vice Launch",
						"buildCwd": "${workspaceFolder}",
						"buildCommand": "make",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "C64: CC65 VICE Debug",
						"description": "A configuration to debug a C64 CC65 project with VICE.",
						"body": {
							"type": "cc65-vice",
							"request": "launch",
							"name": "CC65 Vice Launch",
							"buildCwd": "\\${workspaceFolder}",
							"buildCommand": "make",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.cc65-vice.getProgramName"
				}
			}
		]
	}
}
